@model IEnumerable<dbfirstapp.Models.Teacher>

@{
    ViewData["Title"] = "Index";
}

<h1 id="top">DashBoard</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Dob)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TPassword)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Dob)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TPassword)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.TId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.TId">Details</a> |

                </td>
            </tr>
        }
    </tbody>
</table>

<div style="">
    <ul class="navbar-nav" style="text-align: center; ">
        <li><br /><br /><br /></li>
        <li>
            <a style="width:300px; display: inline-block; background-color:black;" class="nav-link text-light" asp-area="" asp-controller="StudentsView" asp-action="ViewClass">Class Schedule</a>
        </li>
        <li><br /></li>
        <li>
            <a style="width:300px; display: inline-block; background-color:black;" class="nav-link text-light" asp-area="" asp-controller="StudentsView" asp-action="ViewExam">Exam Schedule</a>
        </li>


    </ul>
</div>