@model dbfirstapp.Models.Admin

@{
    ViewData["Title"] = "StaffLogin";
}

<h1 id ="top">Admin Login</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="StaffLogin">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="AId" class="control-label"></label>
                <input asp-for="AId" class="form-control" />
                <span asp-validation-for="AId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="APassword" class="control-label"></label>
                <input asp-for="APassword" class="form-control" />
                <span asp-validation-for="APassword" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
